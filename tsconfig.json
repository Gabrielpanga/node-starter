{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2017",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["es2017"],
    "plugins": [{ "name": "tslint-language-service" }],
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@models": ["src/models/index"],
      "@models/*": ["src/models/*"],
      "@server": ["src/server/index"],
      "@tests": ["tests"],
      "@db": ["src/db/index"],
      "@db/*": ["src/db/*"],
      "@config": ["src/config/index"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["./src/**.*", "index.ts"],
  "exclude": ["*.d.ts", "*.js"]
}
